<div class="container">
    <div class="row">
        <div class="col-12">
            <form action="/registration" method="POST">
                <h1>Registration numbers</h1>
                <div class="message">
                </div>
                <div class="errors">
                    <h5>
                        {{messages.errors}}
                    </h5>
                </div>
                <div class="success">
                    <h5>
                        {{messages.success}}
                    </h5>
                </div>
                <div>
                    <input name="addRegNum" class="regNumberEntered" placeholder="CA 123123 or CA 123-123">
                    <button type="submit" class="addRegNumber btn blue">Add reg number</button>
                </div>
                <hr>
            </form>
            <form action="/reset" method="get">
                <div class="clear">
                    <button type="submit" name="clearBtn" class="clear">Clear all</button>
                </div>
            </form>
            <form action="/registration" method="GET">
                <div id="filtered" class="filteredTown">
                    <strong>Filter by town:</strong>
                    <input type="radio" name="town" value="all" class="filter">Show all
                    <input type="radio" name="town" value="3" class="filter">Bellville
                    <input type="radio" name="town" value="2" class="filter">Paarl
                    <input type="radio" name="town" value="1" class="filter"> Cape Town
                    <button type="submit" class="filterRegNumber">filter</button>
                </div>
                <div class="regNumber">
                    <ul>
                        {{#each regNumber}}
                        <li class="textColor">{{this.description}}</li>
                        {{/each}}
                    </ul>
                </div>
            </form>
        </div>
    </div>
</div>